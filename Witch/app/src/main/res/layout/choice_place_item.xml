<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <TextView
        android:id="@+id/appointment_dl_tv_name"
        style="@style/pt_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배따라기 구미 인동점"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointment_dl_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경북 구미시 인동중앙로11길 7-1"
        android:textColor="@color/witch_white"
        android:maxWidth="200dp"
        android:textSize="12sp"
        android:focusable="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_dl_tv_name" />

    <TextView
        android:id="@+id/appointment_dl_tv_choice"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/square_btn"
        android:backgroundTint="@color/witch_green"
        android:clickable="true"
        android:text="선택"
        android:textColor="@color/witch_black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>