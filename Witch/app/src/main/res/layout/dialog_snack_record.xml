<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/box_style"
    android:backgroundTint="@color/witch_dark_gray"
    android:padding="16dp">

    <TextView
        android:id="@+id/snack_record_dl_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="음성 녹음"
        android:textColor="@color/witch_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/snack_record_dl_btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/witch_green"
        android:text="확인"
        android:textColor="@color/witch_black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/snack_record_dl_btn_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack_record_dl_tv_file_text" />

    <Button
        android:id="@+id/snack_record_dl_btn_no"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:backgroundTint="@color/witch_gray"
        android:text="취소"
        android:textColor="@color/witch_black"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/snack_record_dl_btn_yes" />

    <ImageButton
        android:id="@+id/snack_record_dl_iv_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/record_start"
        android:scaleType="fitCenter"
        android:background="@color/witch_dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack_record_dl_tv_title" />

    <TextView
        android:id="@+id/snack_record_dl_tv_file_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="녹음 시작"
        android:textColor="@color/witch_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack_record_dl_iv_record" />

    <TextView
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/snack_record_dl_tv_file_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="녹음 들어보기"
        android:textSize="10dp"
        android:gravity="center"
        android:background="@drawable/square_btn"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/snack_record_dl_tv_file_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/snack_record_dl_tv_file_text" />


</androidx.constraintlayout.widget.ConstraintLayout>