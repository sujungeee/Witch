<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.appointment.AppointmentCreate1Fragment">

    <TextView
        android:id="@+id/appointment_fg_btn_back"
        style="@style/pt_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; 이전"
        android:textColor="@color/witch_green"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        style="@style/pt_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="약속 만들기"
        android:textColor="@color/witch_white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        style="@style/pt_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="약속의 이름을 지어주세요."
        android:textColor="@color/witch_green"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/appointment_fg_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:drawableEnd="@drawable/clear"
        android:hint="30자 이내로 작성해주세요."
        android:maxLength="30"
        android:textAppearance="@style/CustomHintText"
        android:background="@drawable/box_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        style="@style/pt_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="약속을 한 마디로 요약해주세요."
        android:textColor="@color/witch_green"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointment_fg_et_name" />

    <EditText
        android:id="@+id/appointment_fg_et_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:drawableEnd="@drawable/clear"
        android:hint="50자 이내로 작성해주세요."
        android:maxLength="50"
        android:textAppearance="@style/CustomHintText"
        android:background="@drawable/box_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/appointment_fg_btn_next"
        style="@style/pt_semibold"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="@color/witch_green"
        android:text="다     음"
        android:textColor="@color/witch_black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>