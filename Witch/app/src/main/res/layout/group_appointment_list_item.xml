<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_appointment_list_item"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:background="@color/witch_black"
    android:layout_height="75dp">

    <TextView
        android:id="@+id/group_appointment_li_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="12:00 PM"
        android:textColor="@color/witch_white"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/group_appointment_li_tv_date"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/group_appointment_li_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.01.24"
        android:textColor="@color/witch_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_appointment_li_tv_time" />

    <View
        android:id="@+id/view2"
        android:layout_width="5dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/witch_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_appointment_li_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="아이디어 회의입니다."
        android:textSize="14dp"
        android:textColor="@color/witch_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_appointment_li_tv_appointment_active"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:padding="2dp"
        android:background="@drawable/green_btn"
        android:text="진행중"
        android:textColor="@color/witch_white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_appointment_li_tv_title"
        app:layout_constraintStart_toEndOf="@+id/group_appointment_li_tv_title"
        app:layout_constraintTop_toTopOf="@+id/group_appointment_li_tv_title" />


    <TextView
        android:id="@+id/group_appointment_li_tv_ismine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my"
        android:textSize="14dp"
        android:textColor="@color/witch_green"
        app:layout_constraintBottom_toTopOf="@+id/group_appointment_li_tv_title"
        app:layout_constraintStart_toStartOf="@+id/group_appointment_li_tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>