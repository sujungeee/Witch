<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:backgroundTint="@color/witch_black"
    android:background="@drawable/square_btn"
    android:layout_marginVertical="5dp"
    android:id="@+id/group_list_item"
    android:layout_width="match_parent"
    android:layout_height="110dp">


    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/Circle"
        android:id="@+id/group_li_iv_group_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:background="@drawable/pot_icon"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_li_tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D211"
        android:textColor="@color/witch_white"
        android:textSize="16dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/group_li_iv_group_img"
        app:layout_constraintTop_toTopOf="@+id/group_li_iv_group_img" />

    <TextView
        android:id="@+id/group_li_tv_group_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="함께한 지 200일"
        android:textSize="10dp"
        android:textColor="@color/witch_green"
        app:layout_constraintBottom_toBottomOf="@+id/group_li_iv_group_img"
        app:layout_constraintStart_toStartOf="@+id/group_li_tv_group_name"
        app:layout_constraintTop_toBottomOf="@+id/group_li_tv_group_name" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임장 "
        android:textSize="12dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/witch_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/group_li_iv_group_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남수정"
        android:textSize="12dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/witch_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv1" />

    <ImageButton
        android:id="@+id/group_li_ib_group_enter"
        android:layout_width="80dp"
        android:backgroundTint="@color/witch_green"
        android:background="@drawable/circle_shape"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>