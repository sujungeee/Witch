<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">



    <ImageView
        android:id="@+id/group_member_item_iv_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:clipToOutline="true"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/witch_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/group_member_item_tv_profile_name"
        style="@style/pt_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="구성원"
        android:textColor="@color/witch_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/group_member_item_iv_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/group_member_item_iv_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/group_member_item_iv_profile_image"/>


    <ImageView
        android:id="@+id/group_member_item_iv_master_hat"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/hat_icon"
        app:layout_constraintBottom_toTopOf="@id/group_member_item_iv_profile_image"
        app:layout_constraintStart_toStartOf="@+id/group_member_item_iv_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/group_member_item_iv_profile_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>